@model List<IronRock.Data.Broker>


<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">Registered Brokers</div>
        <div class="tools">
            <a class="collapse" href="javascript:;" ></a>
            
        </div>
    </div>
    <div class="portlet-body">
    	
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Broker ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   <td>
                        @Html.DisplayFor(model => item.BrokerID)
                   </td>

                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>              

                    <td>
                        @Html.DisplayFor(model => item.Address)
                    </td> 
                    <td>
                        @Html.ActionLink("Edit","EditBroker", new{id=item.Id}) | 
                        @Html.ActionLink("Users","BrokerUsers", new{id=item.Id})
                    </td>
                </tr>
            }

            </tbody>
        </table>
    </div>
    </div>
</div>

@Html.ActionLink("Create Broker ", "CreateBroker", null, new { @class="btn green"})

