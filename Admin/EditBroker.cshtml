@model IronRock.Data.Broker


<h2>Edit Broker</h2>
 <hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
              
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m=>m.Id)
        <div class="form-group">
            <label for="BrokerID" class = "control-label col-md-1">Broker ID</label> 
            <div class="col-md-1">
                @Html.TextBoxFor(model => model.BrokerID, new { @class="form-control", required="required", @readonly="readonly"})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Name, new { @class="form-control", required="required"})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Address, new { @class="form-control", required="required" })
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Cancel", "Brokers", null, new { @class="btn btn-default"})
            </div>
        </div>
    </div>
}

