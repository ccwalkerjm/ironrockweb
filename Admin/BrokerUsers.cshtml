@model List<AppUser>

@{
    ViewBag.Title = "Broker Users";
}


<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">@ViewBag.Broker Users</div>
        <div class="tools">
            <a class="collapse" href="javascript:;" ></a>
            
        </div>
    </div>
    <div class="portlet-body">    	
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>User name</th>
                    <th>Roles</th>
                    <th>Failed Access</th>
                    <th>Is Locked Out</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   <td>
                        @Html.DisplayFor(model => item.UserName)
                   </td>                    
                    <td>
                        <ul>
                            @foreach (var role in item.Roles)
                            {
                                <li>@role</li>
                            }
                        </ul>                       
                    </td> 

                    <td>
                        @Html.DisplayFor(model => item.AccessFailedCount)
                    </td>              

                    <td>
                        @Html.DisplayFor(model => item.LockoutEnabled)
                    </td> 
                    <td>
                        @Html.ActionLink("Unlock","UnlockUser", new{id=item.Id}) | 
                        @Html.ActionLink("Reset Password","ResetPassword", new{id=item.Id}) |
                        @Html.ActionLink("Delete","DeleteUser")
                    </td>
                </tr>
            }

            </tbody>
        </table>
    </div>
    </div>
</div>

@Html.ActionLink("Create User ", "CreateUser", null, new { @class="btn green"})